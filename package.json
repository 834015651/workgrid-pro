{
  "name": "workgrid-pro",
  "productName": "工时管理系统",
  "private": true,
  "version": "0.0.138",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "uninstall-log": "node uninstall_log_module.js",
    "preview": "vite preview",
    "pack": "electron-builder --dir --x64",
    "dist": "electron-builder --win nsis"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@supabase/supabase-js": "^2.86.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "lunar-javascript": "^1.7.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "recharts": "^2.12.0",
    "tailwind-merge": "^2.2.1",
    "xlsx-js-style": "1.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "description": "WorkGrid Pro Professional Edition",
  "author": "LIYANGFEI <834015651@qq.com>",
  "build": {
    "appId": "com.workgrid.pro",
    "productName": "工时管理系统",
    "asar": false,
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "main.cjs"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "工时管理系统",
      "runAfterFinish": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico"
    }
  }
}
